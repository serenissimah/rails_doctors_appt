<h1>Add Doctor</h1>
<%= form_with(model: @doctor, local: true, class: "ui form" ) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Doctor's name" %>
  </div>
  <div class="field">
    <%= f.label :specialty %>
    <%= f.text_field :specialty, required: true, placeholder: "Specialty" %>
  </div>
  <%= f.submit nil, class: "ui blue button inverted" %>
<% end %>